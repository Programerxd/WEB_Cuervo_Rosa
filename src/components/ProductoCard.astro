---
// src/components/ProductoCard.astro

interface Props {
    name: string;
    description: string;
    priceInfo: string; 
    imageSrc: string;
}

const { name, description, priceInfo, imageSrc } = Astro.props;
const displayPrice = priceInfo.split(' ')[0];
const numeroWhatsApp = '525512345678'; 
---
<div class="bg-white rounded-2xl shadow-md overflow-hidden flex flex-col transition-shadow duration-300 hover:shadow-lg">
    
    <div class="h-52 bg-gray-100 flex items-center justify-center overflow-hidden">
        <img 
            src={imageSrc} 
            alt={name} 
            class="w-full h-full object-cover" 
        />
        {imageSrc === '' && (
            <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M4 3h16a2 2 0 012 2v14a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2zm0 2v14h16V5H4zm3 10a1 1 0 00-1 1v1a1 1 0 001 1h10a1 1 0 001-1v-1a1 1 0 00-1-1H7zm11-8H6a1 1 0 00-1 1v5a1 1 0 001 1h12a1 1 0 001-1V8a1 1 0 00-1-1z"/>
            </svg>
        )}
    </div>

    <div class="p-4 flex flex-col flex-grow">
        <h3 class="text-lg font-bold text-gray-900">{name}</h3>
        <p class="text-sm text-gray-600 flex-grow mb-4">{description}</p>
        
        <div class="flex justify-between items-center mt-auto">
            {/* Muestra el primer precio o la informaciÃ³n de precio completa */}
            <span class="text-lg font-bold text-gray-900">{displayPrice}</span> 
            
            <button 
                id={`whatsapp-btn-${name.replace(/\s/g, '-')}`}
                class="whatsapp-btn flex items-center space-x-2 px-4 py-2 rounded-xl font-semibold text-white btn-primary-small shadow-md hover:shadow-lg transition-all duration-200"
            >
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" /><path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" /></svg>
                <span>Ordenar</span>
            </button>
        </div>
    </div>
</div>

<script define:vars={{ name, priceInfo, numeroWhatsApp }}>
    // @ts-nocheck
    
    document.addEventListener('DOMContentLoaded', () => {
        const button = document.getElementById(`whatsapp-btn-${name.replace(/\s/g, '-')}`);
        
        if (button) {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                
                // Construye el mensaje con la informaciÃ³n especÃ­fica del producto
                const mensaje = `Hola! Me interesa este producto:
