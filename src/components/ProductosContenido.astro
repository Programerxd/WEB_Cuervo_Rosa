    { name: 'Cubre clip pen', priceInfo: '20pz x $30 y 100pz x $100', description: 'clip cord', imageSrc: '/img/Clip-cord.png' },
    { name: 'Hilo para Mapping', priceInfo: '$35', description: 'Para diseños de cejas y otros', imageSrc: '/img/Hilo-Mapping.png' },
    { name: 'Lapiz de cera para cejas', priceInfo: '$70', description: 'Mapping larga duracion, resistente al agua', imageSrc: '/img/Lapiz-Cera.png' },
