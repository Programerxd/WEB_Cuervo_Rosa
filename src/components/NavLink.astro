---
// src/components/NavLink.astro
interface Props {
    href: string;
    text: string;
    
    currentPath: string;
}
const { href, text, currentPath } = Astro.props;

const isActive = currentPath === href;

const baseClass = "py-2 px-3 text-sm uppercase transition duration-300 ease-in-out";
const activeClass = "text-pink-600 font-bold border-b-2 border-pink-600";
const inactiveClass = "text-gray-700 hover:text-pink-600 hover:border-b-2 hover:border-pink-600";
---
<a 
    href={href} 
    class:list={[
        baseClass,

        isActive ? activeClass : inactiveClass
    ]}
    aria-current={isActive ? "page" : undefined}
>
    {text}
</a>